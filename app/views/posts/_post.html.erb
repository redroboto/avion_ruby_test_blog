<div id="<%= dom_id post %>">
  <h2 class='text-xl'>
    <strong>Title:</strong>
    <%= post.title %>
  </h2>

  <p>
    Created at:
    <%= format_date_time(post.created_at) %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    Last Updated on:
    <%= format_date_time(post.updated_at) %>
  </p>

</div>
